<Window x:Class="Activator.Views.ConfirmDeleteCamera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Activator.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Title="Confirm Delete Camera" Height="200" Width="600">
    <Grid Background="SeaGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="92*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="35" Text="Do you want to delete this ?" Foreground="White" Grid.ColumnSpan="2"></TextBlock>
        <Button x:Name="BtnConfirmDelete" Click="BtnConfirmDelete_Click" Content="Delete" Background="Red" Foreground="White" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="43" Width="147" Margin="0,0,62,52" Grid.ColumnSpan="2"></Button>
    </Grid>
</Window>
